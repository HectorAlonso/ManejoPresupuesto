@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar" asp-controller="TiposCuentas">
    <input type="hidden" asp-for="Id" /> @**El input guardara el Id del TipoCuenta para saber a que ID se le modificara los datos, este Campo estara oculto*@
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label text-primary"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
