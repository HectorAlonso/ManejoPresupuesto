@model Categoria
@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>Editar Categoria: @Model.Nombre</h1>
<h5>
    La categoria nos permite indicar en qué gastamos nuestro dinero,
    tambien, de dónde provienen nuestros ingresos.
</h5>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar" asp-controller="Categorias">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input type="text" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoOperacionId" class="form-label"></label>
                <select asp-for="TipoOperacionId" class="form-select" asp-items="@Html.GetEnumSelectList<TipoOperacion>()"></select>
                <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
